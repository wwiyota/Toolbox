{
  "manifest_version": 3,
  "name": "Tool Box",
  "version": "0.1.0",
  "description": "色々な便利機能を追加していく予定です。",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://ssl.wf.jobcan.jp/*"],
      "js": ["jobcan_wf_content.js", "jquery-3.4.1.min.js"],
      "run_at": "document_idle"
    }
  ]
}
